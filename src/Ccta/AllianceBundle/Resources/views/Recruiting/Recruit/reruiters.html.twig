{% extends '@CctaAlliance/layout.html.twig' %}

{% block body %}

    <div class="page-header">
        <h2>Recruteurs <small>{{ app.session.get('activeWorld').name }}</small></h2>
    </div>
    <div class="row">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Nom de l'alliance</th>
                    <th>Commandant</th>
                    <th>Joueurs</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for alliance in alliances %}
                    <tr>
                        <td>{{ alliance.name }}</td>
                        <td>{{ alliance.getOwner().player.playername }}</td>
                        <td>{{ alliance.players.count() }}/50</td>
                        <td>
                            <a href="{{ path('ccta_alliance_recruiting_recruit_apply', {'allianceId': alliance.id}) }}" class="btn btn-success">Postuler</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}