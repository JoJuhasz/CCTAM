<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}THIS IS CCTA{% endblock %}</title>

    {% stylesheets '@CctaCoreBundle/Resources/public/css/bootstrap.min.css'
    '@CctaCoreBundle/Resources/public/css/admin.css'  %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
</head>

<body>
<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a href="{{ path('ccta_user_admin_index') }}">Utilisateurs</a></li>
                <li><a href="{{ path('ccta_player_admin_index') }}">Joueurs</a></li>
                <li><a href="{{ path('ccta_world_admin_index') }}">Alliances</a></li>
                <li><a href="{{ path('ccta_world_admin_index') }}">Mondes</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="{{ path('ccta_core_homepage') }}">Retour au site</a></li>
            </ul>
        </div>
    </div>
</div>
<div class="container">

    <p>
        {% for message in app.session.flashbag.get('info') %}
    <div class="alert alert-info" role="alert">Message flash : {{ message }}</div>
    {% endfor %}
    </p>

    <div class="row">
        <div id="content" class="col-md-12">
            {% block body %}
            {% endblock %}
        </div>
    </div>

    <hr>

    <footer>
        <p>THIS IS CCTA © {{ 'now'|date('Y') }} and beyond.</p>
    </footer>
</div>

{% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
{% endblock %}

</body>
</html>