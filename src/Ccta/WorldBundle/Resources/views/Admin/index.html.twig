{% extends "CctaWorldBundle::admin.html.twig" %}



{% block ccta_world_admin_content %}

    <div class="page-header">
        <h2>Gestion des mondes</h2>
    </div>
    <a href="{{ path('ccta_world_admin_add') }}" class="btn btn-success btn-block">Cr√©er un monde</a>
    <br/>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>Worldname</th>
                <th>Max players</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for world in worlds %}
                <tr>
                    <td>{{ world.id }}</td>
                    <td>{{ world.name }}</td>
                    <td>{{ world.maxPlayers }}</td>
                    <td>
                        <div class="btn-group">
                            <a href="{{ path('ccta_world_admin_edit', {'id': world.id}) }}" class="btn btn-default btn-sm">Modifier</a>
                            <a href="{{ path('ccta_world_admin_delete', {'id': world.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>



{% endblock %}