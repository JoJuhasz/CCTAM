{% extends 'FOSMessageBundle::layout.html.twig' %}

{% block fos_message_content %}

    <div class="page-header">
        <h2>{% trans from 'FOSMessageBundle' %}send_new{% endtrans %}</h2>
    </div>

    {{ form_start(form, {'attr': {'role': 'form', 'class':'form-vertical'}}) }}
    {{ form_errors(form) }}



    <div class="form-group">
        {{ form_label(form.recipients) }}
        {{ form_errors(form.recipients) }}
        <div class="input-group">
            {{ form_widget(form.recipients, {'attr': {'class': 'form-control'}}) }}
            <span class="input-group-btn">
            <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-user"></span> Joueurs</button>
            </span>
        </div><!-- /input-group -->

    </div>
    <div class="form-group">
        {{ form_label(form.subject) }}
        {{ form_errors(form.subject) }}
        {{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.body) }}
        {{ form_errors(form.body) }}
        {{ form_widget(form.body, {'attr': {'class': 'form-control'}}) }}
    </div>

    {{ form_rest(form) }}

    <input type="submit" class="btn btn-block btn-success" value="Envoyer" />

    {{ form_end(form) }}

{% endblock %}
