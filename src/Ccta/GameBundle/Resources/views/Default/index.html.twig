{% extends '@CctaGame/layout.html.twig' %}

{% block body %}

    <div class="page-header">
        <h2>Mon tableau de bord</h2>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Informations
                </div>
                <div class="panel-body">
                    <ul class="list-group">
                        <li class="list-group-item">
                            <label>Joueur: </label> {{ player.playername }}
                        </li>
                        <li class="list-group-item">
                            <label>Monde: </label> {{ world.name }}
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Mon alliance{% if alliance is not null %}: {{ alliance.alliance.name }}{% endif %}
                </div>
                <div class="panel-body">
                    {% if alliance is null %}
                    <p><em class="text-danger">Vous n'avez pas encore rejoint d'alliance sur ce monde</em></p>
                        <div class="btn-group">
                        <a class="btn btn-success " href="{{ path('ccta_alliance_recruiting_recruit_recruiters') }}"><span class="glyphicon glyphicon-search"></span> Chercher une alliance</a>
                        <a class="btn btn-success" href="{{ path('ccta_alliance_create') }}"><span class="glyphicon glyphicon-plus"></span> Cr√©er une alliance</a>
                        </div>
                    {% else %}
                        <p><strong>{{ alliance.alliance.intro }}</strong></p>
                        <p>{{ alliance.alliance.description }}</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
