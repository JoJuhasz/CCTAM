{% trans_default_domain 'FOSUserBundle' %}

<div class="page-header">
    <h2>Inscription</h2>
</div>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">

            <div class="form-group">
                {{ form_label(form.email, null, { 'attr': {'class': 'form-label'} }) }}
                {{ form_errors(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.username, null, { 'attr': {'class': 'form-label'} }) }}
                {{ form_errors(form.username) }}
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.avatarFile, null, { 'attr': {'class': 'form-label'} }) }}
                {{ form_errors(form.avatarFile) }}
                {{ form_widget(form.avatarFile, {'attr': {'class': 'form-control'}}) }}
            </div>
            {% for passwordField in form.plainPassword %}
                <div class="form-group">
                    {{ form_label(passwordField, null, { 'attr': {'class': 'form-label'} }) }}
                    {{ form_errors(passwordField) }}
                    {{ form_widget(passwordField, {'attr': {'class': 'form-control'}}) }}
                </div>
            {% endfor %}

            {{ form_rest(form) }}
            <div>
                <button type="submit" class="btn btn-success btn-block">{{ 'registration.submit'|trans }}</button>
            </div>
        </form>
    </div>
</div>

