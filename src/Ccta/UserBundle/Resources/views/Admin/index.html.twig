{% extends "CctaUserBundle::admin.html.twig" %}



{% block body %}
    <div class="page-header">
        <h2>Gestion des utilisateurs</h2>
    </div>
    <a href="{{ path('ccta_user_admin_create') }}" class="btn btn-success btn-block">Cr√©er un utilisateur</a>
    <br/>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
    {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('ccta_user_admin_edit', {'id': user.id}) }}" class="btn btn-default btn-sm">Modifier</a>
                        <a href="{{ path('ccta_user_admin_delete', {'id': user.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>
                    </div>
                </td>
            </tr>
    {% endfor %}
        </tbody>
    </table>


{% endblock %}