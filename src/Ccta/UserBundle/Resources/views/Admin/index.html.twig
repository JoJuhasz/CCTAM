{% extends '@CctaUser/admin.html.twig' %}

{% block ccta_user_admin_content %}
    <div class="page-header">
        <h2>Gestion des utilisateurs</h2>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td class="btn-group">
                    <a href="{{ path('ccta_user_admin_edit', {'id': user.id}) }}" class="btn btn-default">Modifier</a>
                    <a href="{{ path('ccta_user_admin_delete', {'id': user.id}) }}" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}